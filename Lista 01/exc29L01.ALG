Algoritmo "semnome"
// Solicite dois valores
 //calcule a soma entre eles e apresente o resto da divisão por 3.
Var
  valor1, valor2, soma, resto : real


Inicio
   escreva("Digite o primeiro valor: ")
   leia(valor1)

   escreva("Digite o segundo valor: ")
   leia(valor2)

   soma <- valor1 + valor2
   resto <- soma%3

   escreval("O resto da divisão da soma por 3 é:", resto)


Fimalgoritmo