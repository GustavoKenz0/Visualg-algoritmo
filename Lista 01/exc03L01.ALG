Algoritmo "semnome"

Var
   base, altura, area : real


Inicio
      escreva("Digite a base do triangulo: ")
      leia(base)
      
      escreva("Digite a atura do triangulo: ")
      leia(altura)

      area <- (base * altura) / 2
      
      escreval("A area do triangulo é de: ", area:0:2)
Fimalgoritmo